<local:BasePage x:TypeArguments="core:SalesOrderViewModel" x:Class="Temprel.ProductionTracking.SalesOrderPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Temprel.ProductionTracking"
             xmlns:core="clr-namespace:Temprel.ProductionTracking.Core;assembly=Temprel.ProductionTracking.Core"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
                Background="Transparent">
    <Border 
            Padding="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <local:Oe_HdrControl Grid.Row="0"/>
            <Separator Grid.Row="1" Style="{StaticResource Separator_TemprelGradient}" BorderThickness=".5"/>
            <local:Oe_LineControl Grid.Row="2"/>
        </Grid>
    </Border>
    
    
</local:BasePage>
