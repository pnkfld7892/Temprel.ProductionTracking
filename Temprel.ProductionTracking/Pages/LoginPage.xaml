<local:BasePage x:Class="Temprel.ProductionTracking.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Temprel.ProductionTracking"
             xmlns:core="clr-namespace:Temprel.ProductionTracking.Core;assembly=Temprel.ProductionTracking.Core"
             mc:Ignorable="d"   
             x:Name="Page"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border>
        
        <Grid>
            <StackPanel
                TextBlock.TextAlignment="Center">

                <Border Background="{StaticResource BackgroundLightGrayBrush}"
                        Padding="15 50 15 15">
                    <StackPanel>
                        <TextBlock Text="Login"/>
                        <TextBox Tag="UserID"/>
                        <TextBox Tag="Password"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</local:BasePage>
